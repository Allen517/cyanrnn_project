<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.kingwang.netrnn</groupId>
  <artifactId>NETRNN</artifactId>
  <version>0.1-SNAPSHOT</version>
  <packaging>jar</packaging>

  <name>NetRNN</name>
  <url>http://maven.apache.org</url>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <java.version>1.7</java.version>
    <junit.version>4.11</junit.version>
    <jblas.version>1.2.4</jblas.version>
    <jama.version>1.0.3</jama.version>
    <guava.version>18.0</guava.version>
    <dl4j.version>0.4-rc3.8</dl4j.version>
    <nd4j.version>0.4-rc3.8</nd4j.version>
    <canova.version>0.0.0.14</canova.version>
  </properties>

	<!-- Platform-dependent backend selection (netlib is default) -->
	<profiles>
	    <profile>
	        <id>cuda</id>
	        <dependencies>
	            <dependency>
	                <groupId>org.nd4j</groupId>
	                <artifactId>nd4j-jcublas-${cuda.version}</artifactId>
	                <version>${nd4j.version}</version>
	            </dependency>
	        </dependencies>
	    </profile>
	    <profile>
	        <id>netlib</id>
	        <dependencies>
	            <dependency>
	                <groupId>org.nd4j</groupId>
	                <artifactId>nd4j-x86</artifactId>
	                <version>${nd4j.version}</version>
	            </dependency>
	        </dependencies>
	        <activation>
	            <activeByDefault>true</activeByDefault>
	        </activation>
	    </profile>
	</profiles>
	<!-- end platform-dependent backend selection -->

  <dependencies>
    <dependency>
		<groupId>org.jblas</groupId>
		<artifactId>jblas</artifactId>
		<version>${jblas.version}</version>
    </dependency>
